<% include ./partials/header.ejs%>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw]  bg-zinc-100 px-20 py-10 rounded-[30px]">
    <h1 class="text-3xl mb-10 text-center font-semibold text-zinc-700 tacking-tighter capitalize leading-none ">Create new account.</h1>
    <form action="/register" method="post">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username" />
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="username" placeholder="email" />
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="username" placeholder="contact" />
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password" />
     
      <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account"/>
  <p class="text-xs font-semibold text-zinc-700 mt-2 w-5/2 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge that you've read our Privacy Policy; Opens a new tab. Notice at collection</p>
    </form>
    <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account</a>
  </div>
</div>
